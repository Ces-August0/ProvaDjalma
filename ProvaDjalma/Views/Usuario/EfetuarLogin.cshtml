@model ProvaDjalma.Models.Usuario

@{
    ViewBag.Title = "Efetuar Login";
}

<h2>Log In</h2>

@using (Html.BeginForm("EfetuarLogin", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserName)
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserPass)
        @Html.PasswordFor(model => model.UserPass, new { @class = "form-control" })
    </div>

    <input type="submit" value="Log In" class="btn btn-primary" />
}
